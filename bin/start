#! /usr/bin/env node

var router = require("../")({
  debug: true,
  maps: {
    "**/*": "**/*"
  }
});

var port = process.env.PORT || 33750;
var args = process.argv;

if (args[2] && /^\d+$/g.test(args[2])) {
  port = args[2];
}

router.listen(port, function(err) {
  if (err.message.indexOf("listen") >= 0) {
    this.listen(0);
  }
});